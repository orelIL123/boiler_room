{
  "expo": {
    "name": "Boiler Room",
    "slug": "boiler-room",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/adaptive-icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "owner": "orel895",
    "splash": {
      "image": "./assets/splashphoto.png",
      "resizeMode": "cover",
      "backgroundColor": "#0A0A0A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.boilerroom.trading",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "האפליקציה זקוקה לגישה לתמונות כדי להוסיף תמונות לחדשות",
        "NSCameraUsageDescription": "האפליקציה זקוקה לגישה למצלמה כדי לצלם תמונות לחדשות"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.boilerroom.trading",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "notification": {
      "color": "#E63946",
      "androidMode": "default",
      "androidCollapsedTitle": "התראות מ-Boiler Room"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "6e44342b-4c4d-406d-9e21-118ce25eb743"
      }
    }
  }
}
